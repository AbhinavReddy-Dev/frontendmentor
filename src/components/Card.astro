---
export interface Props {
  id: string;
  title: string;
  body: string;
  href: string;
  sitelink: string;
  status: string;
  tags: string[];
  date: string;
}

const { id, href, title, body, sitelink, status, tags, date } = Astro.props;
const statusStyle =
  status === "In-Progress"
    ? " text-yellow-400 bg-yellow-900 border-[0.5px] border-yellow-400"
    : " text-green-400 bg-green-900 border-[0.5px] border-green-400";
---

<article
  class="relative mt-8 flex flex-col items-start justify-between rounded-xl border border-purple-100 bg-gray-900 p-4 text-white shadow-lg shadow-indigo-900 hover:shadow-none sm:p-6 lg:p-6"
  id={id}>
  <span class={"rounded-full py-1 px-3 text-[10px] font-bold " + statusStyle}>
    <span class="sr-only">Status:</span>{status}
  </span>
  <time
    datetime="2022-10-10"
    class="absolute right-4 top-4 block text-xs text-gray-500 dark:text-gray-400">
    {
      new Date(date).toLocaleDateString("en-US", {
        year: "numeric",
        month: "long",
        day: "numeric",
      })
    }
  </time>
  <div class="mt-3 text-gray-500">
    <a
      href={href}
      class="flex gap-1 text-lg font-bold text-white hover:gap-2 hover:text-gray-200 sm:text-xl">
      <span>{title}</span>
      <span>&rarr;</span>
    </a>

    <p class="mt-2 hidden text-sm text-gray-400 sm:block">
      {body}
    </p>

    <div class="mt-2 flex flex-wrap">
      {
        tags.map((tag) => {
          return (
            <span class="mt-2 mr-2 inline-flex items-center rounded-full bg-fuchsia-50 px-3 py-0.5 text-xs font-medium text-fuchsia-800">
              {tag}
            </span>
          );
        })
      }
    </div>
  </div>
  <a
    class="mt-4 flex items-center gap-1 text-xs font-bold text-blue-400 hover:gap-2 hover:text-blue-500"
    href={sitelink}>
    <span> Challenge Details on frontendmentor.io</span>
    <span class="text-sm"> &rarr;</span>
  </a>
</article>
