---
export interface Props {
  id: number;
  title: string;
  body: string;
  href: string;
  sitelink: string;
  status: string;
  tags: string[];
}

const { id, href, title, body, sitelink, status, tags } = Astro.props;
const statusStyle =
  status === "In-progress"
    ? " text-yellow-700 bg-yellow-100"
    : " text-green-700 bg-green-100";
---

<div
  class="relative flex flex-col items-start justify-between rounded-xl border border-purple-100 bg-gray-900 p-4 text-white shadow-lg shadow-indigo-900 hover:shadow-none sm:p-6 lg:p-8">
  <span class={"rounded-full py-1 px-3 text-xs font-bold " + statusStyle}>
    <span class="sr-only">Status:</span>{status}
  </span>
  <div class="mt-3 text-gray-500">
    <a
      href={href}
      class="flex gap-1 text-lg font-bold text-white hover:gap-2 hover:text-gray-200 sm:text-xl">
      <span>{title}</span>
      <span>&rarr;</span>
    </a>

    <p class="mt-2 hidden text-sm text-gray-400 sm:block">
      {body}
    </p>

    <div class="mt-2 flex flex-wrap">
      {
        tags.map((tag) => {
          return (
            <span class="mt-2 mr-2 inline-flex items-center rounded-full bg-fuchsia-100 px-3 py-0.5 text-sm font-medium text-fuchsia-800">
              {tag}
            </span>
          );
        })
      }
    </div>
  </div>
  <a
    class="mt-4 flex items-center gap-1 text-xs font-bold text-blue-400 hover:gap-2 hover:text-blue-500"
    href={sitelink}>
    <span> Challenge Details on frontendmentor.io</span>
    <span class="text-sm"> &rarr;</span>
  </a>
</div>
