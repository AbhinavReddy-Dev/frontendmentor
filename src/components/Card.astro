---
export interface Props {
  id: number;
  title: string;
  body: string;
  href: string;
  sitelink: string;
  status: string;
  tags: string[];
}

const { id, href, title, body, sitelink, status, tags } = Astro.props;
const statusStyle =
  status === "In-progress"
    ? " text-yellow-600 bg-yellow-100"
    : " text-green-600 bg-green-100";
---

<div
  class="relative flex flex-col items-start justify-between rounded-xl border border-purple-100 p-4 shadow-xl sm:p-6 lg:p-8">
  <span class={"rounded-full py-1 px-3 text-xs font-medium " + statusStyle}>
    <span class="sr-only">Status:</span>{status}
  </span>
  <div class="mt-3 text-gray-500">
    <a
      href={href}
      class="mt-4 text-lg font-bold text-gray-900 hover:underline sm:text-xl">
      {title} &rarr;
    </a>

    <p class="mt-2 hidden text-sm sm:block">
      {body}
    </p>

    <div class="mt-2 flex flex-wrap">
      {
        tags.map((tag) => {
          return (
            <span class="mt-2 mr-2 inline-flex items-center rounded-full bg-fuchsia-100 px-3 py-0.5 text-sm font-medium text-fuchsia-800">
              {tag}
            </span>
          );
        })
      }
    </div>
  </div>
  <a
    class="mt-4 text-xs font-bold text-blue-600 hover:text-blue-500"
    href={sitelink}>
    Challenge Details on frontendmentor.io &rarr;
  </a>
</div>
